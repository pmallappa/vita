% Open source project header - displays project name with dates and URL
% Usage: \opensourceproject{<project name>}{<start year>}{<end year>}{<url>}
\newcommand*{\opensourceproject}[4]{%
  \vspace{-1mm}
  \needspace{2\baselineskip}
  \setlength\tabcolsep{0pt}
  \setlength{\extrarowheight}{0pt}
  \begin{tabular*}{\textwidth}{@{\extracolsep{\fill}} L{0.7\textwidth} C{0.3\textwidth}}
    \ifx&#4&%
      {\ostitlestyle{#1}}%
    \else
      {\ostitlestyle{#1} {\fontsize{8pt}{1em}\bodyfontlight\color{awesome} ~(\href{#4}{Link})}}%
    \fi
    & \opensourceformatdates{#2}{#3}
  \end{tabular*}%
  \par\vspace{1mm}
}

% Helper macro to format open source date ranges with spaced hyphen
\newcommand*{\opensourceformatdates}[2]{%
  \ifx&#1&%
    \osdatestyle{}
  \else
    \ifx&#2&%
      \osdatestyle{#1}
    \else
      \osdatestyle{#1\space-\space#2}
    \fi
  \fi
}

% Open source contribution entry - displays contribution description
% Usage: \opensourceentry{<description>}
\newcommand*{\opensourceentry}[1]{%
  \setlength\tabcolsep{0pt}
  \setlength{\extrarowheight}{0pt}
  \osdescriptionstyle{#1}
  \par\vspace{-1mm}
}

% Open source content environment - matches experience font/spacing
\newenvironment{opensourcecontent}{%
  \vspace{-1mm}%
  \begingroup
  \fontsize{9pt}{1.2em}\bodyfontlight\color{text}%
  \setlength{\parindent}{0pt}%
  \setlength{\parskip}{0.6mm}%
}{%
  \par
  \endgroup
  \vspace{1mm}%
}

\endinput
