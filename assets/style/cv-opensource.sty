% Open source project header - displays project name with dates
% Usage: \opensourceproject{<project name>}{<start year>}{<end year>}{<url>}
\newcommand*{\opensourceproject}[4]{%
  \vspace{-1mm}
  \needspace{2\baselineskip}
  \setlength\tabcolsep{0pt}
  \setlength{\extrarowheight}{0pt}
  \begin{tabular*}{\textwidth}{@{\extracolsep{\fill}} L{0.7\textwidth} C{0.3\textwidth}}
    \ostitlestyle{#1} & \osdatestyle{#2 -- #3} \\[-1mm]
    \multicolumn{2}{L{\textwidth}}{\osdescriptionstyle{#4}}
  \end{tabular*}%
  \par\vspace{1mm}
}

% Open source contribution entry - displays contribution description
% Usage: \opensourceentry{<description>}
\newcommand*{\opensourceentry}[1]{%
  \setlength\tabcolsep{0pt}
  \setlength{\extrarowheight}{0pt}
  \osdescriptionstyle{#1}
  \par\vspace{-1mm}
}

\endinput
